  <body class="bg-light" ng-controller = "control">
    <div class="container">
  <div class="py-5 text-center">
    <img class="d-block mx-auto mb-4" src="/docs/4.4/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
    <h2>Sinistre Auto</h2>
  </div>

  <div class="row p-4">
    <div class="col-md-4 order-md-2 mb-4">
      <h4 class="d-flex justify-content-between align-items-center mb-3">
        <span class="text-muted">Numero de police</span>
      </h4>
      

      <form class="card p-2">
        <div class="input-group">
          <input type="text" class="form-control border-0" readonly placeholder="<%= numero_police %>">
        </div>
      </form>
    </div>
    <div class="col-md-8 order-md-1">
      <h4 class="mb-3">Information prerequises</h4>
      <form method="post" action="send">
        <div class="row">
          <div class="col-md-5 mb-3">
            <input type="hidden" name="nom" value="<%= infoUser.client.nom %>">
            <input type="hidden" name="prenom" value="<%= infoUser.client.prenom %>">
             <input type="hidden" name="num_police" value="<%= numero_police %>">

            <label for="type">Type de sinistre</label>
            <select class="custom-select d-block w-100" id="type" name="typesinistre" required>
              <option value="vol">Vol</option>
              <option value="recours anticipe">Recours anticipé</option>
              <option value="bris de glace">Bris de glace</option>
              <option value="accident">Accident</option>
            </select>
          </div>
          <div class="col-md-5 mb-3">
            <label for="type">Besoin de constat ?</label>
            <select class="custom-select d-block w-100" id="type" name="constat" required>
              <option value="oui">oui</option>
              <option value="non">non</option>
            </select>
          </div>

        </div>
        <div class="row">
          <div class="col-md-6 mb-3">
            <label for="firstName">nombre de personnes mortes</label>
            <input name="nbmorts" type="number" class="form-control" required>
          </div>
          <div class="col-md-6 mb-3">
            <label for="firstName">nombre personnes blessées</label>
            <input type="number" name="nbblesses" class="form-control" required>
          </div>
        </div>
        <button class="btn btn-success btn-lg btn-block rounded-0" type="submit">Valider l'ajout de sinistre</button>
      </form>
    </div>
