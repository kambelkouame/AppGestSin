                        </ div >
                    </ div >

                </ div >
                < div  id = " step-2 " >
                    < h2 > Votre nom </ h2 >
                    < div  id = " form-step-1 "  role = " form "  data-toggle = " validator " >
                        < div  class = " form-group " >
                            < label  for = " name " > Nom: </ label >
                            < input  type = " text "  class = " form-control "  name = " name "  id = " email "  placeholder = " Écrivez votre nom "  requis >
                            < div  class = " help-block with-errors " > </ div >
                        </ div >
                    </ div >
                </ div >
                < div  id = " step-3 " >
                    < h2 > Votre adresse </ h2 >
