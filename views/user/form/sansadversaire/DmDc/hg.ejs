                        Termes et conditions: Gardez votre sourire :)
                    </ p >
                    < div  id = " form-step-3 "  role = " form "  data-toggle = " validator " >
                        < div  class = " form-group " >
                            < label  for = " terms " > Je suis d'accord avec les conditions générales </ label >
                            < input  type = " checkbox "  id = " terms "  data-error = " Veuillez accepter les conditions générales "  requises >
                            < div  class = " help-block with-errors " > </ div >
                        </ div >
                    </ div >


                </ div >
            </ div >
        </ div >

        </ formulaire >

    </ div >

    <! - Inclure jQuery ->
    < script  src = " https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js " > </ script >
    <! - Inclure le plugin jQuery Validator ->
    < script  src = " https://cdnjs.cloudflare.com/ajax/libs/1000hz-bootstrap-validator/0.11.5/validator.min.js " > </ script >


    <! - Inclure la source JavaScript de SmartWizard ->
    < script  type = " text / javascript "  src = " ../dist / js / jquery.smartWizard.min.js " > </ script >

    < script  type = " text / javascript " >
        $ ( document ). prêt ( fonction () {
            // Boutons supplémentaires de la barre d'outils
            var btnFinish =  $ ( ' <button> </button> ' ). texte ( ' Terminer ' )
                                             . addClass ( ' btn btn-info ' )
                                             . on ( ' click ' , function () {
                                                    if ( ! $ ( this ). hasClass ( ' disabled ' )) {
                                                        var elmForm =  $ ( " #myForm " );
                                                        if (elmForm) {
                                                            elmForm . validateur ( « valider » );
                                                            var elmErr =  elmForm . find ( ' .has-error ' );
                                                            if (elmErr &&  elmErr . longueur  >  0 ) {
                                                                alert ( ' Oups, nous avons encore une erreur dans le formulaire ' );
                                                                retour  faux ;
                                                            } else {
                                                                alert ( " Super! nous sommes prêts à soumettre le formulaire " );
                                                                elmForm . soumettre ();
                                                                retour  faux ;
                                                            }
                                                        }
                                                    }
                                                });
            var btnCancel =  $ ( ' <button> </button> ' ). texte ( ' Annuler ' )
                                             . addClass ( ' btn btn-danger ' )
                                             . on ( ' click ' , function () {
                                                    $ ( ' #smartwizard ' ). smartWizard ( " reset " );
                                                    $ ( ' #myForm ' ). find ( " entrée, zone de texte " ). val ( " " );
                                                });
            // Assistant intelligent
            $ ( ' #smartwizard ' ). smartWizard ({
                    sélectionné :  0 ,
                    thème :  « points » ,
                    transitionEffect : ' fade ' ,
                    toolbarSettings : {toolbarPosition :  ' bottom ' ,
                                      toolbarExtraButtons : [btnFinish, btnCancel]
                                    },
                    anchorSettings : {
                                markDoneStep :  true , // ajoute un css terminé
                                markAllPreviousStepsAsDone :  true , // Lorsqu'une étape sélectionnée par le hachage d'URL, toutes les étapes précédentes sont marquées comme terminées
                                removeDoneStepOnNavigateBack :  true , // Pendant la navigation, l'étape terminée après l'étape active sera effacée
                                enableAnchorOnDoneStep :  true  // Activer / désactiver la navigation des étapes terminées
                            }
                 });
            $ ( " #smartwizard " ). on ( " LeaveStep " , fonction ( e , anchorObject , stepNumber , stepDirection ) {
                var elmForm =  $ ( " # form-step- "  + stepNumber);
                // stepDirection === 'forward': - cette condition permet de faire la validation du formulaire
                // uniquement sur la navigation vers l'avant, ce qui facilite la navigation vers l'arrière, mais toujours la validation lors de la prochaine étape
                if (stepDirection ===  ' forward '  && elmForm) {
                    elmForm . validateur ( « valider » );
                    var elmErr =  elmForm . enfants ( ' .has-error ' );
                    if (elmErr &&  elmErr . longueur  >  0 ) {
                        // La validation du formulaire a échoué
                        retour  faux ;
                    }
                }
                return  true ;
            });
            $ ( " #smartwizard " ). on ( " showStep " , fonction ( e , anchorObject , stepNumber , stepDirection ) {
                // Activer le bouton de finition uniquement à la dernière étape
                if (stepNumber ==  3 ) {
                    $ ( ' .btn-finish ' ). removeClass ( ' désactivé ' );
                } else {
                    $ ( ' .btn-finish ' ). addClass ( ' désactivé ' );
                }
            });
        });
    </ script >
